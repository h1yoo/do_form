<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ page import="java.io.*" %>
<%
    request.setCharacterEncoding("UTF-8");
    String content = request.getParameter("content");

    String filePath = application.getRealPath("/gpwns/copy.txt"); // 상대 경로
    try {
        FileWriter fw = new FileWriter(filePath, false); // 덮어쓰기    ++ true = 이어쓰기
        fw.write(content);
        fw.close();
        out.println("<p>저장 완료!</p>");
    } catch (IOException e) {
        out.println("<p>저장 실패: " + e.getMessage() + "</p>");
    }
%>
