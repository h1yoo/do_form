// 순번(No) 처리
if ($("#" + settings.tableId + " ." + settings.copyRowNoClass)[0] !== undefined) {
  var copyRowNoCnt = $tr.find("." + settings.copyRowNoClass).length; // 순번 span 수

  for (var i = 0; i < copyRowNoCnt; i++) {
    var $noEl = $($tr.find("." + settings.copyRowNoClass)[i]);
    var currentNo = parseInt($noEl.text()); // ← span 내부 숫자만 추출

    var newNo;
    if (!$noEl.attr('rowspan')) {
      newNo = currentNo + settings.copyRowNoSize * plusCnt * $tr.length;
    } else {
      newNo = currentNo + settings.copyRowNoSize * plusCnt;
    }

    $noEl.text(newNo); // ← span 텍스트만 바꿔줌
  }
}
