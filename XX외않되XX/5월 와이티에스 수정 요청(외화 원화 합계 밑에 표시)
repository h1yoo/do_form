calAmount_total : function () {
  var self = this;
  
  var sum_cur = 0;
  $('.cur input').each(function(i,e){
    sum_cur += Number($(e).val().replace(/,/g, ""));
  });
  $(".sum_cur").text(GO.util.numberWithCommas(sum_cur));

  // 💡 여기가 핵심 - 단가 * 수량의 합계를 구함
  var sum_price = 0;
  $("#dynamic_table1 tr").each(function(i, e){
    var priceStr = $(e).find(".price input").val();
    var amountStr = $(e).find(".amount input").val();

    // 디버깅 출력
    console.log(`row ${i} - priceStr: ${priceStr}, amountStr: ${amountStr}`);

    if (priceStr && amountStr) {
      var price = parseFloat(priceStr.replace(/,/g, "")) || 0;
      var amount = parseFloat(amountStr.replace(/,/g, "")) || 0;
      sum_price += price * amount;

      console.log(`→ parsed: price=${price}, amount=${amount}, partial=${price * amount}`);
    }
  });

  console.log(`총합 sum_price = ${sum_price}`);
  $(".sum_price").text(GO.util.numberWithCommas(sum_price.toFixed(2)));
}
