const startDate = dayjs($('.startDate').val());
const endDate = dayjs($('.endDate').val());
const warnBox = $('.warn'); // 문구 넣을 곳

if (!startDate.isValid() || !endDate.isValid() || startDate > endDate) {
    warnBox.html('유효한 날짜를 선택해주세요.').show();
    $('.calDay input').val('');
    return;
}

const dayDiff = endDate.diff(startDate, 'days') + 1;
$('.calDay input').val(dayDiff + '일');

if (dayDiff > 5) {
    warnBox.html('휴가일이 5일을 초과했습니다.').show();
} else {
    warnBox.html('').hide();
}
